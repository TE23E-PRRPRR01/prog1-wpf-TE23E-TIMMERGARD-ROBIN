<Window x:Class="AritmetikApp2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AritmetikApp2"
        mc:Ignorable="d"
        Title="AritmetikApp" Height="450" Width="800"
        SizeToContent="WidthAndHeight">
    <StackPanel Margin="10">
        <Label FontWeight="Bold" FontSize="24">Aritmetiken</Label>
        <Label FontWeight="Bold">Tal 1: </Label>
        <TextBox Name="txbTal1"></TextBox>
        <Label FontWeight="Bold">Operator (+. -. *, /):</Label>
        <TextBox Name="txbOperator"></TextBox>
        <Label FontWeight="Bold">Tal 2: </Label>
        <TextBox Name="txbTal2"></TextBox>
        <Button Click="KlickBeräkna" Margin="10">Beräkna</Button>
        <Label Name="lblResultat" Margin="10" FontWeight="Bold"></Label>
    </StackPanel>
</Window>
