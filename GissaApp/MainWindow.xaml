<Window x:Class="prov_wpf_1_TE23E_Tim_Schussler.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:prov_wpf_1_TE23E_Tim_Schussler"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" SizeToContent="WidthAndHeight">
    <StackPanel Margin="5">
        <Label Margin="5" FontWeight="Bold" FontSize="20">Gissa talet (1..1000)</Label>
        <Label Margin="5">Ange gissning:</Label>
        <TextBox Name="txbGissning" Height="30" Margin="5"></TextBox>
        <StackPanel Orientation="Horizontal">
            <Button Click="klickGissa" Margin="5" Width="100">Gissa</Button>
            <Button Click="klickVfacit" Margin="5" Width="100">Visa facit</Button>
        </StackPanel>
        <Label Margin="5">Resultat:</Label>
        <TextBox Name="txbResultat" Height="30" Margin="5"></TextBox>
        <Label Margin="5">Gissningshistorik:</Label>
        <Button Click="klickVgissningar" Margin="5" Width="100">Visa gissningar</Button>
        <ListBox Name="lbGissningar" Height="120" Margin="5"></ListBox>
        <Button Click="klickVgissningar" Margin="5" Width="100">Visa gissningar</Button>
    </StackPanel>
</Window>